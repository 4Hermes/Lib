{
  "name": "@4hermes/lib-shared",
  "displayName": "Hermes Shared Lib",
  "version": "0.0.1-0",
  "description": "An NPM package that provides a number of helpful interfaces, utility classes, etc., that are used throughout Project Hermes.",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "license": "GPL-3.0-only",
  "homepage": "https://git.4lch4.io/4lch4/Lib-Shared",
  "scripts": {
    "start": "node dist/index.js",
    "dplr:start": "doppler run -p $CRONICLE_PROJECT --config $CRONICLE_CONFIG --command='DEBUG=$DEBUG node ./dist/index.js'",
    "build": "tsc",
    "pretty": "prettier --write .",
    "pretty:git": "prettier --write . && if [[ $(git status -s) ]]; then git commit -a -m 'chore(pretty): project prettied'; fi",
    "lint": "prettier -c .",
    "test": "echo 'There are currently no tests available.'",
    "scan": "snyk monitor && snyk code test",
    "preversion": "npm run pretty:git",
    "postversion": "if [[ $(git status -s) ]]; then git commit -a -m 'chore(npm): version bump'; fi"
  },
  "publishConfig": { "access": "public" },
  "engines": { "node": ">=16.0.0" },
  "keywords": ["4lch4", "supabase", "openai", "chatgpt", "gpt-3"],
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "ssh://git@git.4lch4.io:22022/4lch4/Lib-Shared.git"
  },
  "author": {
    "name": "4lch4",
    "email": "hey@4lch4.email",
    "url": "https://4lch4.com"
  },
  "bugs": {
    "email": "bugs@4lch4.email",
    "url": "https://git.4lch4.io/4lch4/Lib-Shared/issues"
  },
  "dependencies": {
    "@4lch4/logger": "^1.11.0",
    "@koa/router": "^12.0.0",
    "@supabase/supabase-js": "^2.2.3",
    "dayjs": "^1.11.7",
    "fs-extra": "^11.1.0",
    "koa": "^2.14.1",
    "mongodb": "^4.13.0",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.11.18",
    "prettier": "^2.8.1",
    "snyk": "^1.1081.0",
    "typescript": "^4.9.4"
  }
}
